<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="dao" class="fr.pizzeria.dao.DaoProducer" factory-method="getDaoFactoryJpa">
		<constructor-arg name="emf" ref="emf" />
	</bean>
	<bean id="emf" class="javax.persistence.Persistence" factory-method="createEntityManagerFactory">
		<constructor-arg value="pizzeria-console-objet-java8" />
	</bean>
</beans>
